#!/bin/bash

unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
  showTime () {
    echo -ne "$1 $(date -u --date @$newDate +%H:%M:%S)                   \r"
  }
elif [[ "$unamestr" == 'Darwin' ]]; then
  showTime () {
    echo -ne "$1 $(date -ju -f %s $newDate +%H:%M:%S)                   \r"
  }
fi

if [[ $# -eq 0 ]] ; then
  date1=`date +%s`;
  updateNewDate () {
    newDate=$((`date +%s` - $date1))
  }
else
  date1=$((`date +%s` + $1));
  updateNewDate () {
    newDate=$(($date1 - `date +%s`))
  }
fi

while true; do
  updateNewDate

  if [[ $newDate -lt 0 ]]; then
    exit 0
  fi

  days=$((
    $((
      $newDate * 1
    )) / 86400
  ))
  if [[ $days -gt 0 ]]; then
    showTime " $days day(s) and"
  else
    showTime
  fi
  sleep 0.1
done

echo ''
