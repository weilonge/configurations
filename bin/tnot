#!/bin/bash

RET=$1
TITLE="Terminal"
if [[ "$RET" == '0' ]]; then
  MESSAGE="Something done!!"
  TYPE="INFO"
else
  MESSAGE="Something wrong? - code: [ ${RET} ]"
  TYPE="WARN"
fi

# Make a beep sound which is a ASCII BEL (\007) character.
echo -ne '\007'

notifier "${TITLE}" "${MESSAGE}" "${TYPE}"

exit ${RET}

